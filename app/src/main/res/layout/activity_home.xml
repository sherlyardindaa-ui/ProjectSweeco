<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF7EE"
    tools:context=".home">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFF9F5"
        tools:context=".HomeActivity">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- HEADER -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="24dp"
                android:background="@drawable/header">

                <!-- Ikon Notifikasi di Kanan Atas -->
                <ImageView
                    android:id="@+id/icNotification"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/baseline_notifications_none_24"
                    android:tint="#FAEBD7"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="16dp"
                    android:layout_marginTop="16dp"/>

                <!-- Teks Halo Aley -->
                <TextView
                    android:id="@+id/tvHalo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Halo Aley,"
                    android:fontFamily="@font/poppins"
                    android:textColor="#FAEBD7"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="16dp"/>

                <!-- Teks Welcome -->
                <TextView
                    android:id="@+id/tvWelcome"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Welcome to Sweeco"
                    android:textColor="#FAEBD7"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="@id/tvHalo"
                    app:layout_constraintTop_toBottomOf="@id/tvHalo"
                    android:layout_marginTop="4dp"/>

                <!-- Search Bar -->
                <EditText
                    android:id="@+id/etSearch"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:hint="Cari dessert favoritmu..."
                    android:paddingStart="16dp"
                    android:background="@drawable/bg_search"
                    app:layout_constraintTop_toBottomOf="@id/tvWelcome"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="16dp"/>

            </androidx.constraintlayout.widget.ConstraintLayout>
            <!-- ============ HOT TODAY SECTION ============ -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_hot"
                android:padding="16dp"
                android:layout_margin="16dp"
                android:orientation="vertical">

                <TextView
                    android:text="HOT TODAY"
                    android:fontFamily="@font/poppins"
                    android:textColor="#FAEBD7"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:text="Limited Edition"
                    android:textColor="#FAEBD7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <ImageView
                    android:id="@+id/imageViewL1"
                    android:layout_width="78dp"
                    android:layout_height="80dp"
                    android:layout_marginTop="-10dp"
                    android:layout_gravity="right"
                    android:layout_marginEnd="10dp"
                    app:srcCompat="@drawable/l2" />

            </LinearLayout>

            <!-- ============ PROMO SECTION ============ -->
            <TextView
                android:text="Promo"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_marginStart="16dp"
                android:layout_marginBottom="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="16dp"
                android:paddingEnd="16dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="150dp"
                        android:layout_height="120dp"
                        android:layout_marginEnd="12dp"