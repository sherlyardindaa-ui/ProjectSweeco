<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FDF7F1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- ✅ HEADER (Hanya bagian ini yang merah) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp"
            android:background="@drawable/bg_header_home"
            android:elevation="4dp">

            <!-- Text Welcome + Bell -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="space_between"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textiewHalo"
                        android:text="Halo Aley,"
                        android:textColor="@android:color/white"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        tools:ignore="InvalidId" />

                    <TextView
                        android:text="Welcome to Sweecco"
                        android:textColor="@android:color/white"
                        android:textSize="16sp"/>
                </LinearLayout>

                <ImageView
                    android:layout_width="26dp"
                    android:layout_height="26dp"
                    android:src="@drawable/baseline_notifications_none_24"
                    android:tint="@android:color/white"/>
            </LinearLayout>

            <!-- Search box -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/baseline_search_24"
                android:gravity="center_vertical"
                android:paddingHorizontal="12dp"
                android:layout_marginTop="16dp">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@android:drawable/ic_menu_search"
                    android:tint="#7B2C25"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Cari dessert favoritmu..."
                    android:background="@android:color/transparent"
                    android:textColor="#5C3A36"
                    android:textColorHint="#9B807C"
                    android:paddingStart="8dp"/>
            </LinearLayout>

        </LinearLayout> <!-- ✅ PENTING: INI PENUTUP HEADER -->

        <!-- ✅ Bagian setelah ini tidak boleh merah -->
        <include layout="@layout/section_hot_promo"/>
        <include layout="@layout/section_promo_grid"/>
        <include layout="@layout/section_kategori"/>
        <include layout="@layout/section_wajib_coba"/>
        <include layout="@layout/section_bottom_nav"/>

    </LinearLayout>

</ScrollView>
